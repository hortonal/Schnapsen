
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "env": {
                "PYTEST_ADDOPTS": "--no-cov",   //Ensure no coverage when debugging to allow break points to be hit.
            },
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
